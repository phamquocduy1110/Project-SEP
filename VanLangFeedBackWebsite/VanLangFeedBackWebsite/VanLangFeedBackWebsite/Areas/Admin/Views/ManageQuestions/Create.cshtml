@model VanLangFeedBackWebsite.Models.CAU_HOI

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 300px">
        <h4>CAU_HOI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TEN_CAU_HOI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TEN_CAU_HOI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_CAU_HOI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MO_TA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MO_TA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MO_TA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_DANH_MUC, "ID_DANH_MUC", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_DANH_MUC", new SelectList(ViewBag.question_type, "ID", "TEN_DANH_MUC"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_DANH_MUC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGUOI_DANG, "NGUOI_DANG", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NGUOI_DANG", new SelectList(ViewBag.account_type, "ID", "EMAIL"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NGUOI_DANG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="customize-input float-left">
                <input type="submit" value="Tạo mới câu hỏi" style="color: black" class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius" />
            </div>
        </div>

        <div class="form-group">
            <div class="customize-input float-left" style="margin-left: 10px">
                <input type="button" value="Hủy bỏ" onclick="location.href='@Url.Action("Index", "ManageQuestions")'" style="color: black" class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius" />
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
